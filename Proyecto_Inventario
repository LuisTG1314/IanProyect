    private void btnConfirmarActionPerformed(java.awt.event.ActionEvent evt) {                                             
        int her;
        String msj="", nomher="";
        her = cmbHerra.getSelectedIndex();
        switch(her) { // costo impresora
        case 1:
            
            nomher = cmbHerra.getSelectedItem().toString();
            break;
        
        case 2:
            
            nomher = cmbHerra.getSelectedItem().toString();
            break;
        
        case 3:
            
            nomher = cmbHerra.getSelectedItem().toString();
            break;
        
        case 4:
            
            nomher = cmbHerra.getSelectedItem().toString();
            break;
    }
        txtaTicket.append("Apellidos del alumno:"+ txtApe.getText());
        txtaTicket.append("Nombre del alumno:"+ txtNom.getText());
        txtaTicket.append("\nFecha:"+ txtfecha.getText());
                    txtaTicket.append("\nGrupo:"+ txtGrup.getText());
        txtaTicket.append("\nNombre de la herramienta: "+ nomher + "\n");
    }                                            

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        txtaTicket.append("");
        txtApe.setText("");
        txtNom.setText("");
        txtGrup.setText("");
        txtfecha.setText("");
        
    }                                        

    private void btnGuardActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
         if(!txtaTicket.getText().equals(""))
        {
            guardarTexto(txtaTicket.getText().toString(), "datos.txt");
            JOptionPane.showMessageDialog(rootPane,"se ha guardado el dato");
            txtaTicket.setText("");
            txtaTicket.requestFocus();
        }
        else 
            JOptionPane.showMessageDialog(rootPane,"ingresa un dato . . . .");
    }                                        

    private void btnHistoActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
       String datos;
       txtaTicket.setText("");
       datos=leerTexto("datos.txt");
       txtaTicket.setText(datos);
    }                                        

